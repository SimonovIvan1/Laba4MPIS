@using Laba4MPIS.Models.Tables
@model List<Users>
@{
    ViewData["Title"] = "Сотрудники";
}

<!DOCTYPE html>

<html>
<head>
    <title>Список сотрудников</title>
</head>
<body>
    <h3>Сотрудники</h3>
    <table>
        <tr>
            <td>Имя</td>
            <td>Электронная почта</td>
            <td>Возвраст</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.name</td>
                <td>@phone.email</td>
                <td>@phone.age</td>
                <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
                <td><a href="~/Users/Delete/?id=@phone.Id">Удалить</a></td>
            </tr>
        }
        <td><a href="~/Employees/Create/">Создать нового сотрудника</a></td>
        <h2>Добавление нового сотрудника в отдел</h2>
        <h3>Информация о сотруднике</h3>
        <form method="post" action="Create">
            <div>
                <label for="name">Имя:</label>
                <input type="text" name="name" value="" />
                <label for="email">Почта:</label>
                <input type="text" name="email" value="" />
                <label for="age">Возраст:</label>
                <input type="number" name="age" value="" />
                <input type="Submit" value="Добавить" /><br />
                <br />
            </div>
        </form>
    </table>
</body>
</html>