@using Laba4MPIS.Models.Tables
@model List<Employees>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <title>Магазин смартфонов</title>
</head>
<body>
    <h3>Смартфоны</h3>
    <table>
        <tr>
            <td>Имя</td>
            <td>Отдел</td>
            <td>Зарплата</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.name</td>
                <td>@phone.department</td>
                <td>@phone.salary</td>
                <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
            </tr>
        }
        <form method="get">
            <div>
                <label for="department">Поиск сотрудников по отделу:</label>
                <input type="text" name="department" value="" />
                <input type="Submit" value="Поиск" /><br />
                (Leave blank to list all movies.)<br />
            </div>
        </form>
    </table>
</body>
</html>